<div class="login-centre">
<h1>Login</h1>
<br><br>
<%= form_tag '/login' do %>
  <%= label_tag :username%>
  <%= text_field_tag :username %>
  <br><br>
  <%= label_tag :password  %>
  <%= password_field_tag :password%>
  <br><br>
  <%= submit_tag "Login"%>
  <br><br>
<%end%>

<p>Don't have an account?<p>
<%= button_to "Register", "/register", method: :get %>
</div>
